<?xml version="1.0" encoding="UTF-8"?>
<resourceDriver>
    <manifestVersion>1.4</manifestVersion>    
    <version>1.0.0</version>    
    <vendor>Spirent</vendor>    
    <language>itest</language>
    <supportCustomArguments></supportCustomArguments>   
    <interface>Layer 1 Switch</interface>
    <entryPoint>lepton-1.0.0.fftc</entryPoint>
    <resourceProperties>    
        <property optional="true">
            <name>ipAddress</name>
            <description>IP address of the remote device</description>
        </property>
        <property optional="true">
            <name>Hostname</name>
            <description>Hostname of the remote device</description>
        </property>
        <property>
            <name>Protocol</name>
            <description>HTTP or HTTPS</description>
        </property>
        <property>
            <name>Port Modeling</name>
            <description>Port Modeling</description>
        </property>
        <property>
            <name>username</name>
            <description>username to authenticate using basic authentication</description>
        </property>       
        <property>
            <name>password</name>
            <description>password to authenticate using basic authentication</description>
        </property>       
    </resourceProperties>
</resourceDriver>